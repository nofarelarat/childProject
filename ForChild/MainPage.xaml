                <ControlTemplate>
                    <Image Source="father.jpg" />
                </ControlTemplate>
            </Button.Template>
            <Image Height="100" Width="100"/>
        </Button>
        <Button Height="343" Width="600" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click_Friend" Margin="0,4,-93,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="friends.jpg" />
